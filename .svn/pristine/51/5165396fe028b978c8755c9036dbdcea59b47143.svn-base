package com.amazingReader.control;

import com.amazingReader.entity.Reader;
import com.amazingReader.service.Interface.ReaderService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;

@RequestMapping("/reader")
@Controller
public class ReaderAlterNameControl {
    @Autowired
    private ReaderService readerService;
    @RequestMapping("/updateReaderName.action")
    public void updateReaderName( HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        Reader reader= (Reader) request.getSession().getAttribute("reader");
        request.setAttribute("reader",reader);
        request.getRequestDispatcher("/JSP/update.jsp").forward(request,response);
    }


}
