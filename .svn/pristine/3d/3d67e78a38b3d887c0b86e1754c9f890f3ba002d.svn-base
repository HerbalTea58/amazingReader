<%@ page contentType="text/html;charset=UTF-8" language="java" %>

<html>
<head>
    <title>数据统计</title>
    <link rel="stylesheet" href="${pageContext.request.contextPath }/Css/writer_all.css" type="text/css" >
    <link rel="stylesheet" href="${pageContext.request.contextPath }/Css/writer_data.css" type="text/css">

</head>
<body style="background: #efefef">
<div></div>
<div class="all">
    <div class="head">
        <div class="title">
            <a href="/AmazingReader/JSP/writer_home.jsp"><span class="title1">惊鸿·</span><span class="title2">作家专区</span></a>
        </div>
        <div  class="notify">
            <a href=""><img id="notify" class="img1" src="${pageContext.request.contextPath}/${LoginWriter.writerPortrait}"><span class="notify1">个人中心</span></a>
        </div>
        <div id="float_div" class="float_div">
            <div class="arrow"></div>
            <span class="float_span">作家资料</span>
            <span class="float_span">更改密码</span>
            <span class="float_span" style="border: none">退出登录</span>
        </div>
    </div>
    <div class="main">
        <div class="All_label">
            <a href="/AmazingReader/JSP/writer_home.jsp"><div class="son_label">
                <span class="label_span">专 区 首 页</span>
            </div></a>
            <a href="/AmazingReader/JSP/writer_novels.jsp" ><div class="son_label">
                <span class="label_span">作 品 管 理</span>
            </div></a>
            <a href="/AmazingReader/JSP/writer_data.jsp" ><div class="son_label_choosed">
                <span class="label_span_choosed">数 据 统 计</span>
            </div></a>
            <a href="/AmazingReader/JSP/writer_income.jsp" ><div class="son_label">
                <span class="label_span">稿 酬 收 入</span>
            </div></a>
            <a href="/AmazingReader/JSP/writer_question.jsp" ><div class="son_label">
                <span class="label_span">作 家 咨 询</span>
            </div></a>
        </div>
        <div class="context">
            <div class="context_title">&nbsp;数据统计</div>
            <div class="context_summary">
                <a id="allincome" href="#"><span class="choosed">订阅统计</span></a>
            </div>
            <div class="context_main">
                <span class="find_span">选择作品:</span>
                <select id="findtype" class="findtype">
                    <option>——</option>

                </select>
                <a class="find1" href="#">查看</a>

                <div class="all_sub">
                    <span class="allcount_span">总订阅</span>
                    <span class="allcount">0</span>
                </div>
                <div class="catory_sub">
                    <div id="new_sub" class="catory">
                        <span class="sub_text">昨日新增订阅</span>
                        <span class="sub_count">0</span>
                    </div>
                    <div id="avg_sub" class="catory">
                        <span class="sub_text">章节平均订阅</span>
                        <span class="sub_count">0</span>
                    </div>
                    <div id="max_sub" class="catory" style="border: none">
                        <span class="sub_text">单章最高订阅</span>
                        <span class="sub_count">0</span>
                    </div>
                </div>
                <div class="little_title_span">订阅明细</div>
                <select class="select_type">
                    <option value="time" selected="selected">发布时间</option>
                    <option value="times">订阅次数</option>
                </select>
            </div>

        </div>
    </div>

</div>


<script type="text/javascript">
    document.getElementById("notify").onmouseover = function () {
        document.getElementById("float_div").style.display = "block";
    }
    document.getElementById("notify").onmouseout = function () {
        document.getElementById("float_div").style.display = "none";
    }
</script>

</body>
</html>
