package com.amazingReader.control;

import com.amazingReader.entity.Comment;
import com.amazingReader.service.Interface.ReaderService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.List;

@RequestMapping("readercomment")
@RestController
public class ReaderCommentsControl {
    @Autowired
    private ReaderService readerService;
    @RequestMapping("/Readercomments.action")
    public  @ResponseBody  List<Comment> getReaderComments( HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        //Reader reader=(Reader)request.getSession().getAttribute("reader");
        int readId=9;
        List<Comment> commentList=readerService.getCommentsSendBy(readId);
        return commentList;
    }
    @RequestMapping("/ReaderReply.action")
    public void getReaderReply(HttpServletRequest request,HttpServletResponse response) throws ServletException, IOException {
        //  Reader reader= (Reader) request.getSession().getAttribute("reader");
        int readerId=5;
        List<Comment> commentList=readerService.readCommentsTo(readerId);
        request.setAttribute("commentList",commentList);
        request.getRequestDispatcher("/JSP/comment2.jsp").forward(request,response);
    }
    @RequestMapping("/ReaderPost.action")
    public void getReaderPostComments(HttpServletRequest request,HttpServletResponse response) throws ServletException, IOException {
        //Reader reader=(Reader)request.getSession().getAttribute("reader");
        int readId=5;
        List<Comment> commentList=readerService.getPostsSendBy(readId);
        request.setAttribute("commentList",commentList);
        request.getRequestDispatcher("/JSP/comment2.jsp").forward(request,response);
    }
}
